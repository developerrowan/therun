{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "module": "commonjs",
    "lib": ["esnext", "DOM"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "dist", "**/*.spec.ts"],
  "include": ["src/**/*.ts"]
}
